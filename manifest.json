{
  "manifest_version": 3,
  "name": "Daily Standup Timer — Scrum & Meeting Tracker",
  "version": "1.0",
  "description": "Track Daily standups with per-speaker timers, lap tracking, and time logs — right on any webpage (JIRA, YouTrack, Redmine).",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Open Meeting Timer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}